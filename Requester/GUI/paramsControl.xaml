<UserControl x:Class="GUI.paramsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="firstCheckbox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Margin="10,0" IsChecked="True"/>
        <TextBox Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="0" Grid.Row="1"/>
        <TextBox Grid.Column="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0" Grid.Row="1"/>

    </Grid>
</UserControl>
